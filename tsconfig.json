{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@": ["./", "node_modules/*"],
      "*": ["src/*", "node_modules/*"]
    },
    "outDir": "public",
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public", "__tests__", "**/*.spec.ts", "**/*.spec.tsx"], // exclude test files from compilation - "**/*.spec.ts"
  "compileOnSave": false
}
